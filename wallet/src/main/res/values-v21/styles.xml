<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PagerTabStrip" parent="NormalText">
        <item name="android:background">#00695C</item>
        <item name="android:textColor">@color/actionbar_fg</item>
        <item name="android:elevation">@dimen/active_elevation</item>
    </style>

    <style name="TransactionRowDirectionFontIcon" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_direction_font_icon_size</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#00695C</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#00695C</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#00695C</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>
</resources>